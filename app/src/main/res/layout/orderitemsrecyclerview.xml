<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"

    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="Buyer ID: "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bid"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView"
        android:gravity="center_vertical"
        android:text="Buyer ID"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="Buyer Name: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bname"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bid"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView"
        android:gravity="center_vertical"
        android:text="Buyer Name"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="Buyer Email :" />

    <TextView
        android:id="@+id/bemail"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="Email :" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"

        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:text="Buyer Phone :" />

    <TextView
        android:id="@+id/btotal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bproductName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView7"
        android:text="NA" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bproductName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:text="Total Price: Rs. " />

    <TextView
        android:id="@+id/bphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bemail"
        android:autoLink="phone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="Phone :"
        android:textColor="#00f"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:text="Product Name:" />

    <TextView
        android:id="@+id/bproductName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bphone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="Product name :" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btotal"
        android:gravity="end">

        <TextView
            android:id="@+id/seeMoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bproductName"
            android:layout_margin="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:clickable="true"
            android:text="see more >>"
            android:textColor="#FFE4960B" />

    </LinearLayout>


</RelativeLayout>
